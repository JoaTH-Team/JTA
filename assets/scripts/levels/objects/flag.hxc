import jta.Paths;
import jta.Global;
import jta.objects.level.Object;
import jta.substates.LevelComplete;
import jta.states.LevelSelect;
import flixel.FlxG;

class FlagObject extends Object
{
	public function new():Void
	{
		super('flag');

		objectInteractable = true;

		loadGraphic(Paths.image('objects/' + objectID), true, 14, 16);

		animation.add('wave', [1, 2, 3, 4, 0], 12, true);
		animation.play('wave');

		immovable = true;
		solid = false;
	}

	public override function overlap():Void
	{
		Global.score += 1000;
		Global.save();
		FlxG.state.persistentUpdate = false;
		FlxG.state.openSubState(new LevelComplete(function():Void 
		{
			Global.flags[FlxG.state.levelNumber - 1] = 1;
			// Global.save();
			FlxG.switchState(new LevelSelect());
		}));
	}
}
