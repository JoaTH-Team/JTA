import jta.modding.events.UpdateEvent;
import jta.modding.module.Module;
import jta.states.level.Level;
import flixel.FlxG;
import Std;

class GlobalModule extends Module
{
	public function new():Void
	{
		super('globalModule');
		priority = -1000;
	}

	public override function update(event:UpdateEvent):Void
	{
		super.update(event);

		if (FlxG.keys.justPressed.F3)
		{
			if (Std.isOfType(FlxG.state, Level))
				Level.resetLevel();
			else
				FlxG.resetState();
		}
	}
}
